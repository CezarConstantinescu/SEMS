<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="SEMS-PU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- Entity classes -->
        <class>com.sems.model.User</class>
        <class>com.sems.model.Ticket</class>
        <class>com.sems.model.Venue</class>
        <class>com.sems.model.Event</class>
        <class>com.sems.model.Concert</class>
        <class>com.sems.model.Wedding</class>
        
        <properties>
              <!-- H2 Database Configuration (file-backed) -->
              <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
              <!--
                  Using a file-backed H2 database stores data on disk under the repo working directory.
                  Files will be created under `./data` (relative to the process working directory).
                  `AUTO_SERVER=TRUE` allows multiple processes to open the same DB (useful during development).
              -->
              <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:file:./data/semsdb;DB_CLOSE_DELAY=-1;AUTO_SERVER=TRUE"/>
              <property name="jakarta.persistence.jdbc.user" value="sa"/>
              <property name="jakarta.persistence.jdbc.password" value=""/>
            
            <!-- Hibernate Configuration -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            
            <!-- Connection Pool -->
            <property name="hibernate.connection.pool_size" value="10"/>
        </properties>
    </persistence-unit>
</persistence>
